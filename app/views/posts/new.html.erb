<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :tag_list, 'Tags' %>
<%= f.text_field :tag_list %>

<%= f.label :picture %>
<%= f.file_field :picture %>

<%= f.submit 'Create post' %>

<% end %>

